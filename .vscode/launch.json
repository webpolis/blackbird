    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Debug Container"
            ,"type": "cppdbg"
            ,"request": "launch"
            ,"program": "${workspaceRoot}/blackbird"
            ,"miDebuggerServerAddress": "localhost:9091"
            ,"args": []
            ,"stopAtEntry": false
            ,"cwd": "${workspaceRoot}"
            ,"environment": []
            ,"externalConsole": true
            ,"linux": {
              "MIMode": "gdb"
            }
            ,"osx": {
              "MIMode": "gdb"
            }
            ,"windows": {
              "MIMode": "gdb"
            }
            ,"preLaunchTask": "launch debug container"
        }
    ]
}